<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawnew"
    tools:context=".activities.conditionActivity">

    <EditText
        android:id="@+id/newtext"
        android:layout_width="324dp"
        android:layout_height="116dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="221dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="394dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="8dp"
        android:textStyle="bold"
        android:text="How many government members in your family?"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/countmembers"
        android:layout_width="320dp"
        android:layout_height="58dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="2dp"
        android:ems="10"
        android:hint="Enter the members(1/2/3/4)"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/newtext" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="319dp"
        android:layout_height="17dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="265dp"
        android:text="*You can add maximum 4 members"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countmembers" />

    <Button
        android:id="@+id/btnsubmitcount"
        android:layout_width="332dp"
        android:layout_height="45dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="155dp"
        android:backgroundTint="@color/black"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


</androidx.constraintlayout.widget.ConstraintLayout>